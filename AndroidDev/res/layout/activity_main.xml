<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#c8c8dc"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/trojanGuy"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:src="@drawable/orhs_drawable"
        android:layout_weight="7"
        android:onClick="smileyCounter" />

    <TextView
        android:id="@+id/school_motto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/ORHS_Motto"
        android:textColor="#070719"
        android:textSize="18sp" />

    
       
    

     
           <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"
       android:orientation="horizontal">
    <Button
        android:id="@+id/Calendar"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:onClick="toCalendar"
        android:text="@string/Calendar"
        
         />

    <Button
        android:id="@+id/newsfeed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="toNewsFeed"
        android:text="@string/NewsFeed"
       
        />
	</LinearLayout>
	 <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"
       android:orientation="horizontal">
    <Button
        android:id="@+id/Settings"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:onClick="toSettings"
        android:text="@string/Settings" 
        />
     <Button
        android:id="@+id/AgreementPages"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:onClick="toYearView"
        android:text="@string/More" 
        />
	</LinearLayout>
	<TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Ellume_Copywrite" />

</LinearLayout>