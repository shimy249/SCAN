<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ellume.scan"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data android:name="com.google.android.gms.version"
            	   android:value="@integer/google_play_services_version"/>
        <activity
            android:name="com.ellume.scan.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ellume.scan.CalActivity"
            android:label="@string/title_activity_cal" >
        </activity>
        <activity
            android:name="com.ellume.scan.NewsActivity"
            android:label="@string/title_activity_news" >
        </activity>
        <activity
            android:name="com.ellume.scan.Year"
            android:label="@string/title_activity_year" >
        </activity>
        <activity
            android:name="com.ellume.scan.NetActivity"
            android:label="@string/title_activity_net" >
        </activity>
    </application>

</manifest>
