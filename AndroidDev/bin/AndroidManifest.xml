<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ellume.SCAN"
    android:versionCode="1"
    android:versionName="0.0.1" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/orhs_drawable"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="nosensor" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Calendar.CalActivity"
            android:label="@string/title_activity_cal" >
        </activity>
        <activity
            android:name=".NewsActivity"
            android:label="@string/title_activity_news" >
        </activity>
        <activity
            android:name=".Year"
            android:label="@string/title_activity_year" >
        </activity>
        <activity
            android:name=".NetActivity"
            android:label="@string/title_activity_net" >
        </activity>
        <activity
            android:name=".Calendar.EventActivity"
            android:label="@string/title_activity_event" >
        </activity>
        <activity
            android:name=".ListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".MoreActivity"
            android:label="@string/title_more_activity" >
        </activity>
        <activity
            android:name=".DetailActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Calendar.ListEventsActivity"
            android:label="@string/title_activity_list_events" >
        </activity>
        <activity
            android:name=".Settings.SettingsFragment"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".Settings.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".Settings.ListThemesActivity"
            android:label="@string/title_activity_list_themes" >
        </activity>
        <activity
            android:name=".Settings.AddThemeNameDialog"
            android:label="@string/Add_Theme"
            android:theme="@android:style/Theme.Holo.Light.Dialog" >
        </activity>
        <activity
            android:name="com.ellume.SCAN.Settings.ThemeEditorActivity"
            android:label="@string/title_activity_theme_editor" >
        </activity>
    </application>

</manifest>
